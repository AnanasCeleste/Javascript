class Combattant {
    constructor(nom, PV, attaque, precision) {
        this.attaque = attaque;
        this.nom = nom;
        this.PV = PV;
        this.precision = precision; 
    }
    getAttack() {
        const random = Math.random();
        return random < this.precision;

    }
    attaquer(ennemi) {
    if (this.getAttack()) {
        console.log("attaque",ennemi.nom)
        ennemi.PV=ennemi.PV-5
        console.log("PV:", ennemi.PV)
    
    } else {
        console.log("L'attaque a échouée")
    }
}
}

let perso1 = new Combattant("Pedro",10,3,0.7)
let perso2 = new Combattant("Jamy",15,2,0.5)


while (perso2.PV>0 ||perso1.PV>0){
    perso1.attaquer(perso2)
    perso2.attaquer(perso1)
